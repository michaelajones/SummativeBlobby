float yoff = 0;

void setup(){
 size(800,800);
}

void draw(){
  background(0);
  
  translate(width/2, height/2);
  
  float radius = 150;
  
  beginShape();
  float xoff = 0;
  for(float a = 0; a < TWO_PI; a += 0.0005){
    fill(random(255));
    float offset = map(noise(xoff,yoff),0,1,-1000,1000);
    float r = radius + offset;
    float x = r * cos(a * 100);
    float y = r * sin(a * 500);
    vertex(x,y);
    xoff += 0.005;
  }
  endShape();
  yoff += 0.005;
}
